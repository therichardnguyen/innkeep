source 'https://rubygems.org'


gem 'rails', '4.1.10'

gem 'rails-api'

gem 'bcrypt'

gem 'sqlite3'

group :test do
  gem 'rspec-rails'
  gem "codeclimate-test-reporter", group: :test, require: nil
end

group :development, :test do
  gem 'factory_girl_rails'
  gem 'guard'
  gem 'guard-bundler'
  gem 'guard-rspec'
  gem 'terminal-notifier-guard'
  gem 'spring'
  gem 'faker'
end

